<!DOCTYPE html>
<html>
<%- include('./partials/head.ejs', {title: "Checkout" , css:"/css/checkout.css"}) %>

  <body>

    <!-- Header for checkout page with title -->
    <%- include("./partials/nav.ejs", {token}) %>
      <h2>Checkout Form</h2>
      <div class="row">
        <div class="col-75">
          <div class="container">
            <form onsubmit="onCheckout(event)">
              <!-- Shipping address section where user has to input their details and address -->
              <div class="row">
                <div class="col-50">
                  <h3>Shipping Address</h3>
                  <p id="error-message" class="error-message"></p>
                  <label for="fname"><i class="fa fa-user"></i> Full Name</label>
                  <!-- Label to ask for user's full name  -->
                  <input type="text" id="fullname" name="fullname" placeholder="" required>
                  <label for="email"><i class="fa fa-envelope"></i> Email</label>
                  <!-- Label to ask for user's email  -->
                  <input type="text" id="email" name="email" placeholder="" required>
                  <label for="address"><i class="fa fa-address-card-o"></i> Address</label>
                  <!-- Label to ask for user's address  -->
                  <input type="text" id="address" name="address" placeholder="" required>

                  <div class="row">
                    <div class="col-50">
                      <label for="city"><i class="fa fa-institution"></i> City</label>
                      <!-- Label to ask for user's city  -->
                      <input type="text" id="city" name="city" placeholder="" required>
                    </div>
                    <div class="col-50">
                      <label for="postcode">Postcode</label> <!-- Label for user's postal code  -->
                      <input type="text" id="postcode" name="postcode" placeholder="" required>
                    </div>
                  </div>
                </div>

              </div>
              <button type="submit" class="button">Submit</button> <!-- Proceed to checkout button -->
            </form>
          </div>
        </div>
      </div>
      <%- include("./partials/footer.ejs", {token}) %>
        <script src="/js/checkout.js"></script>
  </body>

</html>