<html lang="en">
<%- include('./partials/head.ejs', {title: "Signup", css:"/css/login.css"}) %> 

<body id="main">   
    <%- include('./partials/nav.ejs') %>
    <p id="title">Sign Up</p>  
    <div id="register"> 
        <form  action="" method="" >
            <input class = "textbox" type ="email"  name="email" placeholder="Email" required>
            <input class = "textbox" type = "text" name="username" placeholder="Username" required>
            <input class = "textbox" type="text" name="password" placeholder="Password" required>
            <input class = "textbox" type="text" name="confirmpassword" placeholder="Confirm Password" required>
            <input class = "textbox" type="text" name="address" placeholder="Address" required>
            <input class = "textbox" type="text" name="city" placeholder="City" required>
            <input class = "textbox" type="text" name="postcode" placeholder="Postcode" required>

            <button id="button" class = "submit" name="submit">Sign up</button>
            <p1 id="create">Already have an account?</p1>
            <a class="button" id="button" href="/login" target="_parent">Login</a>
        </form>   
    </div>
</body>
<%- include('./partials/footer.ejs') %>
</html>