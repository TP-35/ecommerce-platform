<!DOCTYPE html>
<html lang ="en">
    <%- include('./partials/head.ejs', {title: "Home", css: "/css/index.css"}) %>

    <body>
        <%- include("./partials/nav.ejs", {token}) %>

            <div class="page">
                <div class ="bannerhead">
                    <div class="Section">
                        <div class="row">
                            <div class="col-5">
                                <p><b>Free Standard Delivery <br> On Orders Over £70</b></p>
                                <p><b>Online shopping 24/7 <br> With Contactless Delivery</b></p>
                                <p><b>Lots Of Great Deals<br> More Than 50% Off</b></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>


        <div class="Section single-product">
            <div class="row">
                <div class="col-2">
                    <img src=<%=`/images/${product.image}` %> width="500px", height="600px">
                </div>
                <div class="col-2">
                    <p><%=product.category %></p>
                    <h1><%= product.name %> </h1>
                    <h4>£<%= product.cost %> </h4>
                    <select>
                        <option>XL</option>
                        <option>Large</option>
                        <option>Medium</option>
                        <option>Small</option>
                    </select>
                    <input type="number" value="1" min="0" step="1" max="99">
                     <a href=<%=`/basket/${product.product_id}`%>>
                        <button id="button">Add To Basket</button>
                    </a>
                    <h3>Product Information</h3>
                    <p><%=product.description %></p>
                </div>
            </div>
        </div>

        <div class="Section">
            <div class="row row-2">
                <h2>More Products</h2>
            </div>
        </div>

        <div class = "Section">
            <div class="row">
            <% moreProducts.forEach(product => { %>
                    <div class="col-4">
                        <img src=<%=`/images/${product.image}`%> height="250px">
                        <h4><%=product.name%></h4>
                        <div class="rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                        </div>
                        <p>£<%=product.cost%></p>
                        <a href=<%=`/product/${product.product_id}`%>>
                            <button id="button">View Product</button>
                        </a>
                    </div>
            <% }) %>
            </div>       

        <script>
            console.log(product);
            function addToBasket(e) {
                e.preventDefault();
            }
        </script>
    </body>
</html>