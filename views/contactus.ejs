<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs', {title: "Contact Us"}) %>
    <head>
        <link rel="stylesheet" href="css/contact.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
    <body>
        <%- include('./partials/nav.ejs') %>
    <div> 
        <img width="150" src="kslogo.png" id="logo">
    </div>
    <br>
    <br>
    <div class="ContactUs">
        <h1>Contact Us</h1>
    </div>
    
<br>
    <div class="socialMedia">
        <a href="https://en-gb.facebook.com/" class="fa fa-facebook"></a>
        <a href="https://twitter.com/?lang=en" class="fa fa-twitter"></a>
        <a href="https://www.instagram.com/" class="fa fa-instagram"></a>
    </div>
    
    <br>
    <br>
    <div class="container">
        <form>
            <label for="nameField" class="label name">Name:</label>
            <input type="text" id="nameField" name="name" 
            placeholder="Please enter your name">
            
            <label for="emailAddress" class="label email">Email Address:</label>
            <input type="text" id="emailAddress" name="emailAddressBox" 
            placeholder="Please enter your email address">

            <label for="Message" class="label message">Message:</label>
            <textarea id="Message" name="MessageBox" 
            placeholder="Please enter your message" style="height:75px"></textarea>

            <input type="submit" value="Submit">
        </form>
    </div>

    <%- include('./partials/footer.ejs') %>
    </body>
</html>
